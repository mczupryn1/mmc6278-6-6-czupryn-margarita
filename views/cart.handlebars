<!-- cart.handlebars -->
<main>
  <h2>Cart</h2>
  <p>
    <a href="/">Return to Store Page</a>
  </p>
  <section id="cart">
    <div class="cart-items">
      {{#each cartItems}}
        <div class="cart-item">
          <a href="/product/{{this.inventoryId}}" class="cart-item-info">
            <img src="{{this.image}}" alt="{{this.name}}" />
            <div>
              <p>{{this.name}}</p>
              <p>{{this.price}}</p>
            </div>
          </a>
          <div class="cart-item-subtotal">
            <div class="cart-item-controls">
              <label>
                Quantity
                <input data-cart-id="{{this.id}}" type="number" min="0" max="{{this.inventoryQuantity}}" value="{{this.quantity}}" />
              </label>
              <button class="remove-from-cart" data-cart-id="{{this.id}}">
                Remove
              </button>
            </div>
            <p>{{this.calculatedPrice}}</p>
          </div>
        </div>
        <hr />
      {{/each}}
      <div class="cart-total">
        <p>Total:</p>
        <p>{{total}}</p>
      </div>
      <button id="emptyCart">Empty Cart</button>
    </div>
  </section>
</main>
